/* notify is a bar for Ubersicht */
/* Written by Daniel Neemann */

// Import Colors
@import "/Users/zzzeyez/.cache/wal/colors.scss";

:root {

	/* Colors */
	--notify-background-color: $color4;
  	--notify-text-color: $color0;
  	--notify-opacity: 0.95;
  	--notify-shadow: 0px 4px 10px 4px rgba(0,0,0,0.0);
  
  	/* Padding from edge of screen */
	/* To position top/right/bottom/left see Alignment */
  	--notify-margin-vertical: 10px;
  	--notify-margin-horizontal: 225px;

	/* Alignment */
	/* Set 0 to where you want bar aligned */
	/* and "auto" where you don't */
	--notify-alignment-top: 0;
	--notify-alignment-right: 0;
	--notify-alignment-bottom: auto;
	--notify-alignment-left: auto;

	/* Bar's total height including --border and excluding padding */
  	--notify-height: 35px;

	/* Corner radius (for rounded corners) */
	--notify-border-radius: 5px;

	/* Mono font recommended (alignment depends on character width) */
  	--notify-font: SF Mono;
  	--notify-font-size: 12px;
  	--notify-font-style: none;
  	--notify-text-padding: 3ch;

	/* Fade */
	--notify-time-visible: 10s;
	--notify-fade: 5s;
}

/* Get monitor width */
.screen {
  	width: 100vw;
  	height: 100vh;
}

.notify {
  	display: block;
  	position: absolute;
	color: var(--notify-text-color);
  	font: var(--notify-font-size) var(--notify-font);
	font-style: var(--notify-font-style);
  	background-color: var(--notify-background-color);
  	opacity: var(--notify-opacity);
  	top: var(--notify-alignment-top);
	right: var(--notify-alignment-right);
	bottom: var(--notify-alignment-bottom);
	left: var(--notify-alignment-left);
  	padding: 0px var(--notify-text-padding);
  	margin-top: var(--notify-margin-vertical);
	margin-right: var(--notify-margin-horizontal);
	margin-bottom: var(--notify-margin-vertical);
	margin-left: var(--notify-margin-horizontal);
  	line-height: var(--notify-height);
	border-radius: var(--notify-border-radius);
	box-shadow: var(--notify-shadow);
	z-index: 2;
  	animation: cssAnimation var(--notify-fade) ease-in var(--notify-time-visible) forwards;
}

@keyframes cssAnimation {
    to {
		opacity: 0;
	}
}
